{
  "name": "@vuehookform/core",
  "version": "0.2.1",
  "description": "TypeScript-first form library for Vue 3, inspired by React Hook Form. Form-level state management with Zod validation.",
  "type": "module",
  "main": "./dist/vuehookform.cjs",
  "module": "./dist/vuehookform.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vuehookform.js",
      "require": "./dist/vuehookform.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:lib": "vite build --config vite.config.lib.ts",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix --cache",
    "lint": "run-s lint:*",
    "format": "prettier --write --experimental-cli src/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build:lib",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuehookform/core.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "form",
    "forms",
    "validation",
    "zod",
    "typescript",
    "hook",
    "react-hook-form"
  ],
  "author": "jonnasson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuehookform/core/issues"
  },
  "homepage": "https://vuehookform.com",
  "peerDependencies": {
    "vue": "^3.3.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.5",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "~1.29.0",
    "eslint-plugin-vue": "~10.5.1",
    "happy-dom": "^20.0.11",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.29.0",
    "pinia": "^3.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-compression2": "^2.4.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.5",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "material-icons": "^1.13.14",
    "material-symbols": "^0.40.2",
    "tailwindcss": "^4.1.18"
  }
}
